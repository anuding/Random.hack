    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="head" Grid.Column="0">
            <!--第一列:放菜单,主页,捐赠,info-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--在此处编辑控件-->
            <Button x:Name="Homepage" Grid.Row="0" Content="homepage"/>
            <Button x:Name="Donation" Grid.Row="1" Content="donation"/>
            <Button x:Name="Info" Grid.Row="2" Content="info"/>
        </Grid>

        <Grid x:Name="middle" Grid.Column="1">
            <!--第二列:放广告,图片处理-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <!--在此处编辑控件-->
            <Grid x:Name="ads" Grid.Column="0">

            </Grid>
            
            <Grid x:Name="PicGrid" Margin="10" Grid.Row="1" >
                <Border BorderBrush="Black" BorderThickness="2" Margin="10" >
                    <Image x:Name="ImageToAnalyze" Margin="8" />
                </Border>
                <!--<TextBlock x:Name="Poems" Text="" TextWrapping="Wrap" Foreground="#FF030303" FontFamily="Microsoft YaHei UI Light" FontSize="22" Margin="98,77,192,76" />
            -->
             </Grid>
            
            <Grid x:Name="url"  Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="Input" Grid.Column="0"/>
                <Button x:Name="AnalyzeButton" Grid.Column="1"   Content="Analyze" Click="AnalyzeButton_Click" />
            </Grid>

            <Grid x:Name="show" Margin="10" Grid.Row="3" >
                <Border BorderBrush="Black" BorderThickness="2" Margin="10" >
                    <Image x:Name="ImageToShow" Margin="8" />
                </Border>
                <TextBlock x:Name="Poems" Text="" TextWrapping="Wrap" Foreground="#FF030303" FontFamily="Microsoft YaHei UI Light" FontSize="22" Margin="98,77,192,76" />
            </Grid>

            <Grid x:Name="functions" Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Set_wallpaper" Grid.Column="0" Content="set as wallpaper"/>
                <Button x:Name="Save" Grid.Column="1" Content="save"/>
                <Button x:Name="Share" Grid.Column="2" Content="share"/>
            </Grid>
        </Grid>

        <Grid x:Name="edit_area" Grid.Column="2">
            <!--第三列:放编辑控件-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <!--在此处编辑控件-->
            <ComboBox Width="120" Grid.Row="0"/>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Grid.Row="1">
                <Button x:Name="buttonopen" Content="Open Color Picker" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-5.01,1.529" ToolTipService.ToolTip="Open color Picker for changing Background" Click="buttonopen_Click" />
                <Border x:Name="Border" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="213" Margin="10,113,0,0" VerticalAlignment="Top" Width="269" />
                <Controls:ColorPicker x:Name="Colorpick" HorizontalAlignment="Left" Height="358" Margin="284,113,0,0" VerticalAlignment="Top" Width="374" ColorChanged="Colorpick_ColorChanged" Visibility="Collapsed" />
            </Grid>
        </Grid>
    </Grid>
</Page>